<resources>

    <!-- Base application theme. -->
    <style name="MangoReaderTheme" parent="MangoReaderTheme.Base">

    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MangoReaderTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="source_spinner" parent="ToolbarTitle">

    </style>

    <style name="MangaItemToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="MangaItemActivityTheme">
        <item name="android:statusBarColor">@color/transparent</item>
        <!--<item name="android:windowTranslucentNavigation">false</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="card_grid_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="card_grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="card_native_actions_button_custom">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>

        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CardBookmarkToggle">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/card_bookmark_padding</item>
    </style>

    <style name="CardTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:layout_margin">@dimen/card_text_margin</item>
    </style>

    <style name="CardSubtitle">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/md_grey_300</item>
        <item name="android:textSize">@dimen/card_subtitle_text_size</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/card_text_margin</item>
        <item name="android:layout_marginRight">@dimen/card_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_bottom_margin</item>
    </style>

    <!-- MangaItem styling -->
    <style name="MangaItemArt">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">250dp</item>
    </style>

    <style name="MangaItemHeader">
        <item name="android:padding">@dimen/manga_item_header_padding</item>
    </style>

    <style name="MangaItemTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/manga_item_title_text_size</item>
        <item name="android:paddingBottom">@dimen/manga_item_title_padding_bottom</item>
    </style>

    <style name="MangaItemSubtitle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/manga_item_subtitle_text_size</item>
        <item name="android:paddingBottom">@dimen/manga_item_subtitle_padding_bottom</item>
    </style>

    <style name="MangaItemDescription">
        <item name="android:textSize">@dimen/manga_item_description_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/manga_item_description_line_spacing_extra
        </item>
    </style>

    <style name="fragment_chapters">
        <item name="android:divider">?android:dividerHorizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle|end</item>
        <item name="android:paddingBottom">@dimen/chapters_padding_bottom</item>
    </style>

    <style name="chapter_row">
        <item name="android:padding">@dimen/chapter_row_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ChapterNumber">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/chapter_number_textsize</item>
        <item name="android:paddingRight">@dimen/chapter_number_padding_right</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ChapterTitle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/chapter_title_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
