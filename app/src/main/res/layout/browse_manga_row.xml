            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />

            <include layout="@layout/manga_card_mini" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>