<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:recyclerviewfastscroller="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="moe.dangoreader.fragment.MangaItemChapterFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chapter_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:scrollbars="none" />

    <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
        android:id="@+id/fast_scroller"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        recyclerviewfastscroller:rfs_barBackground="@color/transparent"
        recyclerviewfastscroller:rfs_handleBackground="@drawable/fast_scroll_bg"/>

</RelativeLayout>