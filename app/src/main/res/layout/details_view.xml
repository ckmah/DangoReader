<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MangaItemDetails"
    android:id="@+id/details_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/manga_item_title"
        style="@style/MangaItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/manga_item_subtitle"
        style="@style/MangaItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/manga_item_description"
        style="@style/MangaItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>